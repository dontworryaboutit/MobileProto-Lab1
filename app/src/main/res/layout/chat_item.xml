<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/item_profile_background"
        android:layout_weight=".20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/item_profile_right"
        android:layout_marginEnd="@dimen/item_profile_right"
        android:background="@android:color/holo_blue_dark">
        <ImageView
            android:id="@+id/item_profile_picture"
            android:contentDescription="@string/item_pic_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_profile_border"
            android:background="@drawable/ic_launcher"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight=".75"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_name_top"
            android:text="@string/item_name_default"
            android:textSize="@dimen/item_profile_name"/>
        <TextView
            android:id="@+id/item_chat_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_profile_name"
            android:textSize = "@dimen/item_chat_body"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/filler_text"
            />
        <TextView
            android:id="@+id/item_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_profile_name"
            android:layout_marginRight="@dimen/item_time_right"
            android:layout_marginEnd="@dimen/item_time_right"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/item_chat_time"
            android:text="@string/filler_text"/>
    </RelativeLayout>

</LinearLayout>